generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Profile {
  id        String  @id @unique
  fullName String
  address1 String
  address2 String?
  city     String
  state    String
  zipcode  String
}

// model to store states
model State {
  id    String @id @unique
  label String
  value String
}

model Quote {
  id              String   @id @unique 
  gallonsRequested Float
  deliveryAddress String
  deliveryDate    DateTime
  suggestedPrice  Float?
  totalAmountDue  Float?
}

model QuoteHistory {
  id              String   @id @unique 
  date            DateTime
  gallonsRequested Float
  pricePerGallon  Float
  totalDue        Float
  deliveryAddress String
  deliveryDate    DateTime
}



